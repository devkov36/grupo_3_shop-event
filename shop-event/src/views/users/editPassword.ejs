<!DOCTYPE html>
<html lang="en">
  <!-- Include Head -->
  <%- include('../partials/head', {title: 'Mi perfil'}) %>
<body>
 <!-- Header -->
 <%- include('../partials/header') %>
 <!-- Header -->

    <section class="login-section">
        <div class="container-login">
            > <a href="/user/profile/edit">Editar mis datos</a>
            > <a href="">Editar mi contraseña</a>
            <div class="user-title">
                <h1>Editar mi contraseña</h1>
            </div>
            <div>
                <form action="/user/profile/edit/password?_method=PUT" method= "POST">
                    <div class="input-profile-container">
                        <div class="input-profile-field">
                            <label for="new_password">Nueva Contraseña </label>
                            <div class="input-box">
                                <input 
                                    type="text" 
                                    placeholder="Ingresa la contraseña" 
                                    name="new_password"
                                    value = "<%= locals.oldData ? oldData.new_password : null %>"
                                >
                            </div>
                        </div>
                        <div class="input-profile-field">
                            <label for="confirm_new_password">Confirmación de la nueva contraseña </label>
                            <div class="input-box">
                                <input 
                                    type="text" 
                                    placeholder="Confirma la contraseña" 
                                    name="confirm_new_password"
                                >
                            </div>
                        </div>
                    </div>         
                    <div class="input-profile-container">
                        <div class="input-profile-field">
                            <label for="old_password">Contraseña actual </label>
                            <div class="input-box">
                                <input 
                                    type="text" 
                                    placeholder="Ingresa tu contraseña actual" 
                                    name="old_password"
                                >
                            </div>
                        </div>
                    </div>
                    <button class="login-button" type="submit">Guardar cambios</button>
                </form>
            </div>
        </div>
    </section>
    <!-- Footer -->
    <%- include('../partials/footer') %>
    <!-- Footer -->
</body>
</html>