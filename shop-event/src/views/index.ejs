<!DOCTYPE html>
<html lang="en">
  <!-- Include Head -->
  <%- include('partials/head', {title: 'Home'}) %>
<body>
     <!-- Header -->
     <%- include('partials/header') %>
     <!-- Header -->
 
    <!-- HeaderNavBar -->
    <%- include('partials/headerNavBar') %>
    <!-- HeaderNavBar -->
    
    <main> 
        <section class="container">    
            <div class="main-article">
              <input type="text" placeholder="Buscar Artista o Evento" />  
            </div>
        </section>
        <div id="conteItemsCarrousel">
              
            <div class="productos-home">
                <% let meses = ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]; %>
                <% events.forEach( ( event )=>  {   %>
                    <article class="contenedor-articulo-carrito-home">
                        <a href="/event/detail/<%= event.id %>">
                            <img src="/images/eventos/<%=event.banner_img%>" alt="<%=event.banner_img%>" class="product_img-carrito-home">
                        </a>
                        <div class="main-article-home">
                            <div class="datos-concierto-carrito">
                                <h4 class="description"><%=event.title%></h4>
                                <div class="home-date-field">
                                    <h5 class="fecha"> <%=event.event_date.getUTCDate()%> </h5>
                                    <h5 class="fecha"> <%=meses[event.event_date.getUTCMonth() + 1]%> </h5>
                                </div>
                                <h5 class="lugar"> <%=event.ubication%></h5>
                                <br>
                                <p> Precios desde: <%=event.cost%></p>
                            </div>
                        </div>
                    </article>
                <% } ) %>
            </div>
        </section>                                   
    </main>
    <!-- Footer -->
    <%- include('partials/footer') %>
    <!-- Footer -->

</body>
</html>