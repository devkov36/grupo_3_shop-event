<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editar ' + title}) %>
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

	<div class="events-wrapper">
		<div class="event-title">
			<h2 class="events-title">Formulario de creación de Eventos</h2>
		</div>
		<br>
		<div class="form-container">
			<form action="/event/edit/<%= eventToEdit.id %>?_method=PUT" method="POST">
				<div class="event-detail">
					<div class="form-field">
						<label for="title" class="form-label">Nombre del evento:</label>
						<input type="title" id="title" name="name" value="<%=  eventToEdit.title %>" class="form-input">
					</div>
					<div class="form-field">
						<label for="price" class="form-label">Precio del evento:</label>
						<input type="text" id="price" name="price" placeholder="<%=  eventToEdit.cost %>" class="form-input">
					</div>
					<div class="form-field">
						<label for="discount" class="form-label">Ubicación:</label>
						<input type="text" id="discount" name="discount" placeholder="<%=  eventToEdit.ubication %>" class="form-input">
					</div>
					<div class="form-field">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<option value="music">Música</option>
							<option value="cine">Cine</option>
							<option value="teatro">Teatro</option>
						</select>
					</div>
					<div class="form-field">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input" placeholder="<%=  eventToEdit.description %>"></textarea>
					</div>
					<div class="button-field">
						<button type="submit" class="save-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los eventos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>